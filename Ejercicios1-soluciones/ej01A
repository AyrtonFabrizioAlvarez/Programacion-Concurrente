programa Ejercicio-1-a
procesos
  proceso juntarFlores (ES vacia:numero)
  comenzar
    si HayFlorEnLaEsquina
      mientras (HayFlorEnLaEsquina)
        tomarFlor
    sino
      vacia:= vacia + 1
  fin
  
  proceso recorrerAvenida (ES vacia:numero)
  comenzar
    repetir 99
      juntarFlores(vacia)
      mover
  fin
  
  proceso dejarFlores(ES flor:numero)
  comenzar
    mientras HayFlorEnLaBolsa
      depositarFlor
      flor:= flor + 1
  fin

areas
  ciudad : AreaC(1,1,100,100)
robots 
  robot tipo1
  variables
    cantFlores: numero
    esquinaVacia: numero
  comenzar
    repetir 3
      recorrerAvenida(esquinaVacia)
      juntarFlores(esquinaVacia)
      dejarFlores(cantFlores)
      Pos(PosAv + 2, PosCa 1)
  fin
     
variables 
  robot1: tipo1
comenzar 
  AsignarArea(robot1,ciudad)
  Iniciar(robot1, 1, 1)
fin





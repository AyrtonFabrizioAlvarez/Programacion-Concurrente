programa Ejercicio-1-a
procesos
  proceso juntarFlores (ES vacia:numero)
  comenzar
    si HayFlorEnLaEsquina
      mientras (HayFlorEnLaEsquina)
        tomarFlor
    sino
      vacia:= vacia + 1
  fin
  
  proceso recorrerAvenida (ES vacia:numero ; ES flores:numero)
  comenzar
    repetir 99
      juntarFlores(vacia)
      mover
    juntarFlores(vacia)
    dejarFlores(flores)
  fin
  
  proceso dejarFlores(ES flor:numero)
  comenzar
    mientras HayFlorEnLaBolsa
      depositarFlor
      flor:= flor + 1
  fin

areas
  ciudad1 : AreaP(1, 1, 1, 100)
  ciudad2 : AreaP(3, 1, 3, 100)
  ciudad3 : AreaP(5, 1, 5, 100)
robots 
  robot tipo1
  variables
    cantFlores: numero
    esquinaVacia: numero
  comenzar
    cantFlores:= 0
    esquinaVacia:= 0
    recorrerAvenida(esquinaVacia, cantFlores)
    Informar(cantFlores)
    Informar(esquinaVacia)
  fin
     
variables 
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
comenzar 
  AsignarArea(robot1,ciudad1)
  AsignarArea(robot2,ciudad2)
  AsignarArea(robot3,ciudad3)
  Iniciar(robot1, 1, 1)
  Iniciar(robot2, 3, 1)
  Iniciar(robot3, 5, 1)
fin




